<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/business_card_background"
    android:name="pl.tajchert.wear.businesscard.ui.MainFragment"
    tools:context="pl.tajchert.wear.businesscard.ui.MainFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1">
            <com.pkmmte.view.CircularImageView
                android:id="@+id/img_contact_picture"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_contact_picture_180_holo_light" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="top|left"
                android:orientation="vertical">

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/text_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name" />

                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/text_contact_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Surname" />
                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/text_contact_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email" />
                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/text_contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone" />
                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/text_contact_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Website" />
                <com.iangclifton.android.floatlabel.FloatLabel
                    android:id="@+id/text_contact_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address" />
            </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
